{
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["noMarkdown", "^noMarkdown"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/lib"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "deploy": {
      "cache": true
    },
    "test": {
      "inputs": ["noMarkdown", "^noMarkdown"],
      "cache": true
    }
  },
  "namedInputs": {
    "noMarkdown": ["!{projectRoot}/**/*.md"]
  },
  "affected": {
    "defaultBase": "main"
  }
}
